{
  "name": "IPEECS Graduation Review Extension",
  "description": "This is a graduation review extension for the IPEECS program.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.ts"
  },
  "permissions": [
    "*://*.cc.ncu.edu.tw/system/162*",
    "*://cis.ncu.edu.tw/ScoreInquiries/student/student_record.php",
    "cookies",
    "declarativeContent",
    "storage"
  ],
  "host_permissions": ["https://cis.ncu.edu.tw/*"],
  "action": {
    "default_popup": "index.html",
    "defuault_icon": {
      "16": "logo192.png",
      "32": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
    }
  },
  "icons": {
    "16": "logo192.png",
    "32": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  }
}
